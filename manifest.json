{
    "manifest_version": 2,
    "name": "Alt Hover for Twitter",
    "short_name": "Alt Hover",
    "version": "0.1",
    "description": "Display Twitter image descriptions on hover",
    "content_scripts": [
        {
            "matches": ["https://*.twitter.com/*", "http://*.twitter.com/*"],
            "js": ["tippy.min.js", "content.js"]
        }
    ]
}
